  <!-- Project Title -->
  <div class="bg-white p-6 rounded-lg shadow-md">
    <div class="flex justify-between flex-wrap items-start">
      <div class="w-full pr-6 lg:w-2/3">
        <h2 class="text-2xl font-bold text-gray-800 mb-2">Water water for pilgrims, pilgrims and visitors</h2>
